<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".InitialActivity">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/initial_text"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:textSize="25dp"
        android:lineSpacingExtra="10dp"
        android:textColor="@color/white"
        android:fontFamily="@font/inter_medium"
        android:textStyle="bold"
        android:gravity="center"
        android:text="To use all features of the app and your security, you must grant ALL permissions."/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/initial_text"
        app:layout_constraintBottom_toTopOf="@id/btn_allow"
        android:orientation="horizontal"
        android:layout_marginHorizontal="15dp"
        android:gravity="center">


        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="10dp"
            android:src="@drawable/twotone_mic_24"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="10dp"

            android:src="@drawable/twotone_location_on_24"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="10dp"
            android:src="@drawable/twotone_phone_24"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="10dp"

            android:src="@drawable/twotone_photo_camera_24"/>



    </LinearLayout>




    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_allow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#4CAF50"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="60dp"
        android:fontFamily="@font/inter_medium"
        android:text="Allow access"
        android:textAllCaps="false"
        android:textSize="30sp"
        app:cornerRadius="40dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>